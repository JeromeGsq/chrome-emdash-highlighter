{
    "manifest_version": 3,
    "name": "EMDash Highlighter",
    "version": "1.0.0",
    "description": "Highlights lines containing em-dashes (—, –, --) with a red background",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content_script.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": []
}